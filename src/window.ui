<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="RootiWindow" parent="AdwApplicationWindow">
    <property name="default-width">600</property>
    <property name="default-height">300</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar" id="header_bar">
            <property name="centering-policy">strict</property>
            <property name="title-widget">
              <object class="AdwViewSwitcherTitle" id="view_switcher_title">
                <property name="stack">inscriptions_stack</property>
              </object>
            </property>
            <child type="start">
              <object class="GtkBox" id="check_box">
                <child>
                  <object class="GtkCheckButton" id="cb_old"></object>
                </child>
                <child>
                  <object class="GtkCheckButton" id="cb_phonologic">
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton" id="cb_modern">
                  </object>
                </child>
              </object>
            </child>
            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">primary_menu</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwViewStack" id="inscriptions_stack">
            <child>
              <object class="AdwViewStackPage" id="bilge_khagan_inscription">
                <property name="name">bilge_khagan</property>
                <property name="title" translatable="true">Bilge Khagan</property>
                <property name="child">
                  <object class="PageBilgeKhagan" id="bilge_khagan_page"></object>
                </property>
              </object>
            </child>
            <child>
              <object class="AdwViewStackPage" id="kul_tigin_inscription">
                <property name="name">kul_tigin</property>
                <property name="title" translatable="true">Kul Tigin</property>
                <property name="child">
                  <object class="PageKulTigin" id="kul_tigin_page"></object>
                </property>
              </object>
            </child>
            <child>
              <object class="AdwViewStackPage" id="tonyukuk_inscription">
                <property name="name">tonyukuk</property>
                <property name="title" translatable="true">Tonyukuk</property>
                <property name="child">
                  <object class="PageTonyukuk" id="tonyukuk_page"></object>
                </property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwViewSwitcherBar">
            <property name="stack">inscriptions_stack</property>
            <binding name="reveal">
              <lookup name="title-visible">view_switcher_title</lookup>
            </binding>
          </object>
        </child>
      </object>
    </child>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Rooti</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
